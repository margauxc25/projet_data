    <main>
        
        <article>  
          <h2>{{pokemon.name}}</h2>
        
        <div>
                <ul>
                    <li>Generation : {{pokemon.generation}}</li>
                    <li>{{pokemon.number}}</li>
                    <li>{{pokemon.type1}}</li> 
                    <li>{{pokemon.type2}}</li>
                </ul>

            </div>
        <img src="./assets/images/pokeball.svg" alt="Pokemon picture">         
