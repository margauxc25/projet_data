        <aside>
            <h4>Stats</h4>
            <div class="stats">
                <p>PV : {{pokemon.pv}}</p>
                <p>ATTACK : {{pokemon.attack}}</p>
                <p>DEFENSE : {{pokemon.defense}}</p>
                <p>SP.DEF : {{pokemon.spdefense1}}</p>
                <p>SP.DEF : {{pokemon.spdefense2}}</p>
                <p>SPEED : {{pokemon.speed}}</p>
            </div>
